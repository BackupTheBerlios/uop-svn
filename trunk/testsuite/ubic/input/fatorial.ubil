entity start
	def start()
		writeln("Fatorial de 0: ", fatorial(0))
		writeln("Fatorial de 1: ", fatorial(1))
		writeln("Fatorial de 2: ", fatorial(2))
		writeln("Fatorial de 3: ", fatorial(3))
		writeln("Fatorial de 4: ", fatorial(4))
		writeln("Fatorial de 5: ", fatorial(5))
		writeln("Fatorial de 6: ", fatorial(6))
	end
	def fatorial(int n) [int]
		if (n == 0)
			return 1
		else
			return n*fatorial(n -1)
		end
	end
end

